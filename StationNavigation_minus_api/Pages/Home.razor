@page "/"
@using Microsoft.AspNetCore.Components
@inject NavigationManager Navigation

<PageTitle>대전역 길찾기</PageTitle>

<div class="loading-container">
    <div class="loading-content">
        <h1>대전역 길찾기</h1>
        <p>잠시만 기다려주세요...</p>
    </div>
</div>

<style>
    .loading-container {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        text-align: center;
    }
    
    .loading-content h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
    }
</style>

@code {
    protected override void OnInitialized()
    {
        // 메인 페이지 접속시 언어선택 페이지로 리다이렉트
        Navigation.NavigateTo("/language", replace: true);
    }
}
